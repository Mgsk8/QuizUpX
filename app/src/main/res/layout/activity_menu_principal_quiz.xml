<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalQuiz">

    <!-- Bot贸n Anfitri贸n -->
    <!-- Contenedor blanco -->

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="269dp"
        android:background="@drawable/border"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <!-- EditText para c贸digo -->

        <!-- Bot贸n ingresar -->

        <EditText
            android:id="@+id/editTextGamePin"
            android:layout_width="339dp"
            android:layout_height="57dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="PIN de juego"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonEnterGame"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#357194"
            android:padding="12dp"
            android:text="Ingresar"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="casual"
        android:text="QuizUpX"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="80dp"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>