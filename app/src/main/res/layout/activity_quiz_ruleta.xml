<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6595F5"
    tools:context=".QuizRuleta">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#1E1E1E"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txtProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pregunta 1 de 5"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#FF9800"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/txtPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Cuál es la capital de Francia?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/btnOpcion1"
                style="@style/QuizButtonStyle"
                android:text="Madrid" />

            <Button
                android:id="@+id/btnOpcion2"
                style="@style/QuizButtonStyle"
                android:text="París" />

            <Button
                android:id="@+id/btnOpcion3"
                style="@style/QuizButtonStyle"
                android:text="Berlín" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
